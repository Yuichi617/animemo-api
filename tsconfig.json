{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["es2020"],
      "module": "commonjs",
      "outDir": "./dist",
      "sourceMap": true,
      "strict": false,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "pretty": true,
      "allowJs": true,
      "noEmit": false,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["./src/**/*", "./tests/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
}
